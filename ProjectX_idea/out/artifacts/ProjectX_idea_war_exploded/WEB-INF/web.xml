<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>com.worker.MainModule MainRpcService</servlet-name>
        <servlet-class>com.worker.server.MainRpcServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.worker.client.login.LoginModule LoginRpcService</servlet-name>
        <servlet-class>com.worker.client.login.server.LoginRpcServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.worker.MainModule MainRpcService</servlet-name>
        <url-pattern>/com.worker.MainModule/MainRpcService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.worker.client.login.LoginModule LoginRpcService</servlet-name>
        <url-pattern>/com.worker.client.login.LoginModule/LoginRpcService</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>LoginModule.html</welcome-file>
    </welcome-file-list>
</web-app>